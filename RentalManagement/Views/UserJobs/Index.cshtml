@model IEnumerable<RentalManagement.Models.Job>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
    else
    {
        <!-- Current Login status -->
        <h6>
            Logged in as:
            <font color="#DF691A">
                <b>
                    @Session["userName"].ToString()
                </b>
            </font>
        </h6>
    }
}
<style>
    th {
        background-color: rgba(50, 115, 220, 0.15);
    }
</style>
<h2> Jobs</h2>
<table class="table">
    <tr>
        <th hidden>
            @Html.DisplayNameFor(model => model.jobID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.fromDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.untilDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PONum)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fromDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.untilDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PONum)
            </td>

        </tr>
    }
</table>